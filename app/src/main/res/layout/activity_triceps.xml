<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TricepsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/Triceps_btn1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="킥백"
            android:background="@drawable/buttonimg"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/Triceps_btn2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="트라이셉스 익스텐션"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Triceps_btn3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="트라이셉스 프레스"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Triceps_btn4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="푸쉬 다운"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Triceps_btn5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="벤치 딥스"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</ScrollView>