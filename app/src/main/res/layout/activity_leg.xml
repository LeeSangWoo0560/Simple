<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LegActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/Leg_btn1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="스쿼트"
            android:background="@drawable/buttonimg"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/Leg_btn2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="프런트 스쿼트"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Leg_btn3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="레그 컬"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Leg_btn4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="레크 익스텐션"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Leg_btn5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="레그 프레스"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Leg_btn6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="바벨 런지"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</ScrollView>