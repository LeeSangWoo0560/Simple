<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShoulderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/Shoulder_btn1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="밀리터리 프레스"
            android:background="@drawable/buttonimg"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/Shoulder_btn2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="사이드 레터럴 레이즈"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Shoulder_btn3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="덤벨 프레스"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Shoulder_btn4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="프런트 레이즈"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Shoulder_btn5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="덤벨 숄더 프레스"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/Shoulder_btn6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="벤트 오버 레터럴 레이즈"
            android:background="@drawable/buttonimg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

</ScrollView>